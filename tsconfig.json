{
    "include": ["src/**/*.ts", "test/**/*.ts", "scripts/**/*.ts"],
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "ES2022",
        "declaration": true,
        "moduleResolution": "nodenext",
        "module": "ES2022",
        "resolveJsonModule": true,
        "outDir": "dist",
        "esModuleInterop": true
    },
}