{
    "include": ["src/**/*.ts", "test/**/*.ts", "scripts/**/*.ts", "playwright.config.ts"],
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "ES2022",
        "declaration": true,
        "moduleResolution": "node",
        "module": "ES2022",
        "resolveJsonModule": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true
    },
}