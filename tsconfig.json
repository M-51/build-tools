{
    "include": ["src/**/*.ts", "test/**/*.ts", "scripts/**/*.ts"],
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "ES2022",
        "declaration": true,
        "moduleResolution": "node",
        "module": "ESNext",
        "resolveJsonModule": true,
        "outDir": "dist",
        "esModuleInterop": true,
    },
    "ts-node": {
        "esm": true
    }
}